<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/frm"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/email"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/fors"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Email" />

        <Button
            android:id="@+id/add"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/fors"
            android:paddingLeft="4dp"

            android:paddingRight="4dp"
            android:text="Add" />

        <Button
            android:id="@+id/call"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/fors"
            android:text="Call" />
    </LinearLayout>

<ImageView

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imagee"
        android:layout_weight="2.5"
        android:src="@drawable/pritz"
         />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_weight="0.7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imagee"
        android:layout_toEndOf="@+id/imagee"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:id="@+id/name"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="fuck ass"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:id="@+id/details"
            android:text="asshole"/>
    </LinearLayout>
</RelativeLayout>




